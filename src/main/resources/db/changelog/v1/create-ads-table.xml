<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">


    <changeSet id="2" author="evgeniy-fedorchenko">

        <preConditions onFail="HALT">
            <and>
                <not>
                    <tableExists tableName="ads"/>
                </not>
                <tableExists tableName="users"/>
            </and>
        </preConditions>

        <comment>Create table 'ads' for entity 'AdEntity'</comment>

        <createTable tableName="ads">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="image" type="oid">
                <constraints nullable="true"/>
            </column>
            <column name="price" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(64)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <sql>
            ALTER TABLE ads ADD CONSTRAINT min_user_id CHECK (user_id > 0);
            ALTER TABLE ads ADD CONSTRAINT price_boundaries CHECK (price &gt;= 0 AND 10000000 &gt;= price);
            ALTER TABLE ads ADD CONSTRAINT min_length_title CHECK (length(title) &gt;= 4);
            ALTER TABLE ads ADD CONSTRAINT min_length_description CHECK (length(description) &gt;= 8);
        </sql>
        <addForeignKeyConstraint baseTableName="ads"
                                 baseColumnNames="user_id"
                                 constraintName="fk_ads_user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>

    </changeSet>
</databaseChangeLog>