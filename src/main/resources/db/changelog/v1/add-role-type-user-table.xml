<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">


    <changeSet id="6" author="evgeniy-fedorchenko">
        <preConditions>
            <tableExists tableName="users"/>
        </preConditions>

        <comment>Change type of column 'role' of table 'users' to custom enum type</comment>

        <sql>
            CREATE TYPE public.role AS ENUM ('ADMIN', 'USER');
        </sql>

        <addColumn tableName="users">
            <column name="temp_role" type="role" computed="true"
                    valueComputed="cast(role AS role)"/>
        </addColumn>

        <dropColumn tableName="users" columnName="role"/>

        <renameColumn tableName="users"
                      oldColumnName="temp_role"
                      newColumnName="role"/>

    </changeSet>

</databaseChangeLog>