<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="3" author="evgeniy-fedorchenko">

        <preConditions onFail="HALT">
            <and>
                <not>
                    <tableExists tableName="comments"/>
                </not>
                <tableExists tableName="users"/>
                <tableExists tableName="ads"/>
            </and>
        </preConditions>

        <comment>Create table 'comments' for entity 'CommentEntity'</comment>

        <createTable tableName="comments">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="ad_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <sql>
            ALTER TABLE comments ADD CONSTRAINT user_id_min CHECK (user_id > 0);
            ALTER TABLE comments ADD CONSTRAINT ad_id_min CHECK (ad_id > 0);
            ALTER TABLE comments ADD CONSTRAINT created_at_min CHECK (created_at > EXTRACT(EPOCH FROM NOW()) * 1000);
            ALTER TABLE comments ADD CONSTRAINT text_min_len CHECK (length(text) >= 8);
        </sql>

        <addForeignKeyConstraint baseTableName="comments"
                                 baseColumnNames="user_id"
                                 constraintName="fk_comments_user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="comments"
                                 baseColumnNames="ad_id"
                                 constraintName="fk_comments_ad_id"
                                 referencedTableName="ads"
                                 referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>